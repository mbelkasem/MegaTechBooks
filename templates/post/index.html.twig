{% extends 'base.html.twig' %}

{% block body %}
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <span class="navbar-brand"><strong>Mega TechBooks</strong></span>

    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
            <li class="nav-item active">
                <a class="nav-link" href="/">Home <span class="sr-only">(current)</span></a>
            </li>                
        </ul>
        <form class="form-inline ml-auto" action="{{ path('app_post_search') }}" method="GET">
            <input class="form-control mr-sm-2" type="search" name="search" placeholder="Search" aria-label="Search">
            <button class="btn btn-outline-light my-2 my-sm-0" type="submit">Search</button>
        </form>
    </div>
</nav>
    <div class="container mt-5">
        <div class="row">
            <div class="col-lg-8">
                <h1>Articles</h1>
                <ul class="list-group">
                    {% for post in posts %}
                        <li class="list-group-item">
                            <a href="{{ path('app_post_show', {'id': post.id}) }}">{{ post.title }}</a>
                            <small class="text-muted">Post√© le {{ post.createdAt ? post.createdAt|date('d-m-Y') : '' }}</small>
                        </li>
                    {% endfor %}
                </ul>
            </div>
            <div class="col-lg-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Categories</h5>
                        <ul class="list-group">
                            {% for post in posts %}
                                <li class="list-group-item">
                                    {% if post.category.name == 'books' %}
                                        <a href="{{ path('app_category_show', {'id': post.category.id}) }}">Livres</a>
                                    {% elseif post.category.name == 'computers' %}
                                        <a href="{{ path('app_category_show', {'id': post.category.id}) }}">Informatique</a>
                                    {% elseif post.category.name == 'hiffis' %}
                                        <a href="{{ path('app_category_show', {'id': post.category.id}) }}">Hiffi</a>
                                    {% else %}
                                        <a href="{{ path('app_category_show', {'id': post.category.id}) }}">{{ post.category.name }}</a>
                                    {% endif %}
                                </li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
