{% extends 'base.html.twig' %}

{% block body %}
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <span class="navbar-brand"><strong>Mega TechBooks</strong></span>

        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item active">
                    <a class="nav-link" href="\">Home <span class="sr-only">(current)</span></a>
                </li>                
            </ul>
            <form class="form-inline ml-auto" action="{{ path('app_post_search') }}" method="GET">
                <input class="form-control mr-sm-2" type="search" name="search" placeholder="Search" aria-label="Search">
                <button class="btn btn-outline-light my-2 my-sm-0" type="submit">Search</button>
            </form>
        </div>
    </nav>

    <h1>Articles</h1>
    <ul>
        {% for post in posts %}
            <li>
                <a href="{{ path('app_post_show', {'id': post.id}) }}">{{ post.title }}</a>
                Post√© le {{ post.createdAt ? post.createdAt|date('d-m-Y') : '' }}
            </li>
        {% endfor %}
    </ul>
{% endblock %}
