{% extends 'base.html.twig' %}

{% block title %}Categories{% endblock %}

{% block body %}
<div class="container">
    <div class="card mt-5">
        <div class="card-body">
            {% set categoryLabel = '' %}
            {% if category.name == 'books' %} 
                {% set categoryLabel = 'Categorie Livres' %}
            {% elseif category.name == 'computers' %}
                {% set categoryLabel = 'Categorie Informatique' %}
            {% elseif category.name == 'hiffis' %}
                {% set categoryLabel = 'Categorie Hiffi' %}
            {% endif %}
            <div class="alert alert-info" role="alert">
                <h5 class="card-text">{{ categoryLabel }}</h5>
            </div>
        </div>
    </div>

    <h3 class="mt-5">Articles</h3>

    {% if articles is not empty %}
        <div class="list-group">
            {% for article in articles %}
                <a href="{{ path('app_post_show', {'id': article.id}) }}" class="list-group-item">
                    <div class="d-flex w-100 justify-content-between">
                        <h5 class="mb-1">{{ article.title }}</h5>
                    </div>
                </a>
            {% else %}
                <p>No records found</p>
            {% endfor %}
        </div>
    {% else %}
        <p>No records found</p>
    {% endif %}

    <a href="{{ path('app_category_index') }}" class="btn btn-secondary mt-3">Retour Ã  la liste</a>
</div>
{% endblock %}
