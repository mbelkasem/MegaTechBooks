{% extends 'base.html.twig' %}

{% block title %}Profile utilisateur!{% endblock %}

{% block body %}

<div class="container rounded bg-white mt-5 mb-5">
    <div class="row">
        <div class="col-md-3 border-right">
            <div class="d-flex flex-column align-items-center text-center p-3 py-5">
                <img class="rounded-circle mt-5" width="150px" src="https://st3.depositphotos.com/15648834/17930/v/600/depositphotos_179308454-stock-illustration-unknown-person-silhouette-glasses-profile.jpg">
                <span class="font-weight-bold">{{ app.user.firstname }} {{ app.user.lastname }}</span>
                <span class="text-black-50">{{ app.user.email }}</span>
                <span> </span>
            </div>
        </div>
        <div class="col-md-5 border-right">
            <div class="p-3 py-5">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h4 class="text-right">Profile Utilisateur</h4>
                </div>
                <div class="row mt-2">
                    <div class="col-md-12">
                        <p class="card-text"><strong>Login:</strong> {{ app.user.login }}</p>
                        <p class="card-text"><strong>Nom:</strong> {{ app.user.firstname }}</p>
                        <p class="card-text"><strong>Pr√©nom:</strong> {{ app.user.lastname }}</p>
                        <p class="card-text"><strong>Email:</strong> {{ app.user.email }}</p>
                        <p class="card-text"><strong>Adresse:</strong> {{ app.user.address }}</p>
                        <p class="card-text"><strong>Code postal:</strong> {{ app.user.zipcode }}</p>
                        <p class="card-text"><strong>Pays:</strong> {{ app.user.country }}</p>
                    </div>
                </div>
                <div class="mt-5 text-center">
                    <a href="{{ path('app_main') }}" class="btn btn-secondary">Home</a>
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}
