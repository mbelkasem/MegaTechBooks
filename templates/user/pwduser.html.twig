{% extends 'base.html.twig' %}

{% block title %}Modification utilisateur{% endblock %}

{% block body %}
    {% include 'includes/header.html.twig' %}
    {% if app.user %}
        <div class="container mt-5">
            <div class="row">
                <div class="col-md-3 border-right">
                    <div class="d-flex flex-column align-items-center text-center p-3 py-5">
                        <img class="rounded-circle mt-5" width="150px" src="https://st3.depositphotos.com/15648834/17930/v/600/depositphotos_179308454-stock-illustration-unknown-person-silhouette-glasses-profile.jpg">
                        <span class="font-weight-bold">{{ app.user.firstname }} {{ app.user.lastname }}</span>
                        <span class="text-black-50">{{ app.user.email }}</span>                  
                    </div>
                </div>
                <div class="col-md-5">
                    <div class="p-3 py-5">
                        <h4 class="text-center">Modification du mot de passe</h4>
                        <div class="card mt-4" style="border-radius: 15px;">
                            <div class="card-body p-4">
                                {{ form_start(form) }}
                                <div class="form-group">
                                    {{ form_label(form.password.first, 'Nouveau mot de passe') }}
                                    {{ form_widget(form.password.first, {'attr': {'class': 'form-control', 'placeholder': 'Nouveau mot de passe'}}) }}
                                </div>
                                <div class="form-group">
                                    {{ form_label(form.password.second, 'Confirmation du nouveau mot de passe') }}
                                    {{ form_widget(form.password.second, {'attr': {'class': 'form-control', 'placeholder': 'Confirmation du nouveau mot de passe'}}) }}
                                </div>
                                {{ form_widget(form.submit, {'attr': {'class': 'btn btn-primary'}}) }}
                                <span><a href="{{ path('app_user') }}" class="btn btn-secondary">Annuler</a></span>
                                {{ form_end(form) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {% else %}
            <div class="container mt-5">
                <p class="text-center text-danger">Utilisateur non connect√©.</p>
            </div>
        {% endif %}
{% endblock %}
